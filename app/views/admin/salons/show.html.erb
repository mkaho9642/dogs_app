<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>サロン詳細</h3>
      <div style="padding-left:20%;">
        <%= image_tag url_for(@salon.image), class: 'img-fluid', style: 'width: 65%;' %>
      </div>
    </div>
    <div class="col-md-6">
      <p class="my-4">
        <strong>サロン名 </strong>
        <span style="margin-left:150px;"><%= @salon.name %></span>
      </p>
      <p class="my-4">
        <strong>サロン情報 </strong>
        <span style="margin-left:135px;"><%= @salon.introduction %></span>
      </p>
      <%= link_to '編集する', edit_admin_salon_path(@salon), class: 'btn btn-success' %>
    </div>
  </div>
</div>