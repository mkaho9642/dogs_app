<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>新規登録</h3>
      <%= form_with model: @salon, method: :patch do |f| %>
        <label>サロン名</label>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control book_title" %>
        </div>

        <div class="form-group row">
          <%= f.label :genre_id, 'ジャンル', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'form-control'} %>
          </div>
        </div>

        <label>画像</label>
        <%= f.file_field :image, accept: "image/*" %>

        <label>サロン説明</label>
        <div class="form-group">
          <%= f.text_area :introduction, class: "form-control book_body" %>
        </div>
        
        <div>
          <%= f.submit '登録', class: 'btn btn-success', method: :post %>
        </div>
      <% end %>
    </div>    
  </div>
</div>