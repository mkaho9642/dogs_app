<div class="container">
  <div class="row">
    <div class="col">
      <h3>ステータス変更</h3>
      <table class="table table-borderless">
        <%= form_with model: [:admin, @user] do |f| %>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>名前</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>ニックネーム</td>
            <td><%= f.text_field :nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効", { value: :false }  %>
              
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会", { value: :true } %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class:"btn btn-success" %>
            <%= link_to "戻る", admin_user_path, class:"btn btn-primary" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>