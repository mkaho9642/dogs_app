<div class="container">
  <div class="row">
    <div class="col">
      <h3>ユーザー詳細</h3>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>名前</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>ニックネーム</td>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</td>
            <td><%= @user.is_active %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_user_path, class:"btn btn-success" %>
            <%= link_to "戻る", admin_users_path, class:"btn btn-primary" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>