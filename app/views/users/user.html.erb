<div class="container">
  <div class="row">
    <div class="col">
      <h2>登録情報</h2>
      <div class="text-center">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>名前</th>
              <td><span><%= @user.name %></span></td>
            </tr>
            <tr>
              <th>ニックネーム</th>
              <td><span><%= @user.nickname %></span></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><span><%= @user.email %></span></td>
            </tr>
          </tbody>
        </table>
        <div class="d-flex justify-content-center">  
          <% if current_user == @user %>
            <ul>
              <%= link_to "編集", edit_user_path, class: "btn btn-success" %>
            </ul>
            <ul>
              <%= link_to "退会", users_confirm_path, class: "btn btn-danger" %>
            </ul>
            <ul>
              <%= link_to "戻る", mypage_user_path(current_user.id), class: "btn btn-primary" %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>