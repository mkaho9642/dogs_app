<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label>名前</label><br>
          <%= f.text_field :name, class: "form-control name" %>
        </div>

        <div class="form-group">
          <label for="inputImage">プロフィール画像</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %><br>
        </div>

        <div class="form-group">
          <label>ニックネーム</label><br>
          <%= f.text_field :nickname, class: "form-control nickname" %>
        </div>

        <div class="form-group">
          <label>メールアドレス</label><br>
          <%= f.text_field :email, class: "form-control email" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update User', class:'btn btn-secondary' %>
        </div>
        <ul>
          <%= link_to "戻る", user_path(current_user.id) %>
        </ul>
      <% end %>
    </div>
  </div>
</div>